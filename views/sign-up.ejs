<div class="signup">
    <div class="home_form signup_form">
        <form action="/create" method="POST">
            <input type="text" name="username" class="home_form_input" placeholder="username">
            <input type="email" name="email" class="home_form_input" placeholder="Email">
            <input type="password" name="password" class="home_form_input" placeholder=" Password">
            <input type="password" name="confirmPassword" class="home_form_input" placeholder="Confirm Password">
            <input type="hidden" name="isVerified" value="false">
            <input type="hidden" name="avatar" value="/images/image.jpg">

            <button type="submit" class="home_form_btn">Sign Up</button>
        </form>
        <hr class="home_hr">
        <a href="/auth/google" class="signup_google"> <button class="home_form_gbtn"><img
                    src="https://seekicon.com/free-icon-download/google_4.svg" alt="google-icon" class="google-icon">
                Sign In with
                Google</button></a>
    </div>
</div>